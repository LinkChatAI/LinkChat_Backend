# LinkRoom Backend Environment Configuration

# Server
PORT=8080
NODE_ENV=development

# MongoDB (Required)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/linkchat?retryWrites=true&w=majority
# For local MongoDB:
# MONGO_URI=mongodb://localhost:27017/linkchat

# Redis (Required)
REDIS_URL=redis://default:password@host:port
# For local Redis:
# REDIS_URL=redis://localhost:6379

# JWT Secret (Required)
JWT_SECRET=your-secret-key-change-in-production

# Room Configuration
ROOM_CODE_LENGTH=4
DEFAULT_ROOM_EXP_HOURS=0.833333  # 50 minutes (0.833333 hours)
MAX_FILE_SIZE_BYTES=10485760      # 10MB

# File Upload (Optional - GCS Configuration)
# If not configured, local file storage fallback will be used
# GCS_BUCKET=your-bucket-name
# GCS_PROJECT_ID=your-project-id
# GCS_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
# GCS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# URLs (Required for production - set to your deployed URLs)
# BASE_URL: Frontend URL for SEO, OG tags, and QR codes
# BACKEND_URL: Backend API URL
# FRONTEND_URL: Alternative to BASE_URL if different
BASE_URL=https://your-frontend-url.com
BACKEND_URL=https://your-backend-url.com
FRONTEND_URL=https://your-frontend-url.com

# For local development:
# BASE_URL=http://localhost:5173
# BACKEND_URL=http://localhost:8080

# SEO
SITE_TITLE=LinkRoom
SITE_DESCRIPTION=Instant temporary chat rooms â€” create a room, share a 4-digit code or QR, join from any device.
DEFAULT_OG_IMAGE=/assets/og-default.png

# Cleanup
CLEANUP_INTERVAL_MS=3600000  # 1 hour (files/rooms deleted after expiry)

# Rate Limiting
MAX_MESSAGE_LENGTH=10000

